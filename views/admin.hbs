<div class="pageAdmin">
    <div class="sectionLeft">
        <a class="my_btn" href="http://localhost:3000/home">main menu</a>
    </div>
    <header class="header4">
        <h1 class="title">{{title}}</h1>
    </header>
    <div class="sectionData">
        <section class="insert">
            <h3>Insert Data</h3>
            <form method="post">
                <div class="input">
                    <label for="title">Title</label>
                    <input type="text" id="title" name="title">
                </div>
                <div class="input">
                    <label for="content">Content</label>
                    <input type="text" id="content" name="content">
                </div>
                <button type="submit" class="btn btn-info position">INSERT</button>
            </form>
        </section>
        <section class="get">
            <h3>Data</h3>
            <div>
                {{# each items }}
                    <article class="item">
                        <div>ID: {{ this._id }}</div>
                        <div>Title: {{ this.title }}</div>
                        <div>Content: {{ this.content }}</div>
                    </article>
                {{/each}}
            </div>
        </section>
        <section class="delete">
            <h3>Delete Data</h3>
            <form method="post">
                <div class="input">
                    <label for="id">ID</label>
                    <input type="text" id="id" name="id">
                </div>
                <button class="btn btn-warning position" type="submit">DELETE</button>
            </form>
        </section>
    </div>
</div>